<div class="progress progress-striped active" >
  <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100" style="width: 20%" >Bestellfortschritt
    <span class="sr-only">50% Complete (success)</span>
  </div>
</div>
<br>
<h2 class="page-header"><tt>Kundendatenbank</tt></h2>
<table id="customers" class="display">
  <thead>
    <tr>
      <th>#</th>
      <th>Telenr.</th>
      <th>Vorname</th>
      <th>Nachname</th>
      <th>Straße</th>
      <th>Hausnr.</th>
      <th>Plz</th>
      <th>Kunde seit:</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <!-- Tabelle Kunde wird angezeigt  -->
  <tbody>
    <% @customers.each do |customer| %>
    <tr>
      <td><%= customer.id %> </td>
      <td><%= customer.TNummer %></td>
      <td><%= customer.Vname %></td>
      <td><%= customer.Nname %></td>
      <td><%= customer.Straße %></td>
      <td><%= customer.HNummer %></td>
      <td><%= customer.plz %></td>
      <td><%= customer.erstellt %></td>
      <td><%= link_to 'Ändern', edit_customer_path(customer) %></td>
      <td><%= link_to 'Löschen', customer, method: :delete, data: { confirm: 'Sind sie sicher?' } %></td>
      <!-- Kunde wird ausgewählt und mithilfe des link_to weitergegeben an den Order/index -->
      <form action="order/index" methode="get">
        <td>
          <%= link_to(:controller => "order", :action => "index", :customer_id => customer.id) do %>
          <span class="glyphicon glyphicon-arrow-right"></span>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Neuer Kundeneintrag', new_customer_path, :class => 'btn btn-info btn-xs' %>




