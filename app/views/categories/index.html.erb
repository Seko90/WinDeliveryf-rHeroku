<div class="col-md-8 drag-div">
  <div class="form-group">
    <div id="products">
    <!-- Auslesen und Anzeigen der Tabelle Kategorie -->
      <h2 class="page-header"><tt>Kategorien</tt></h2>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>#</th>
            <th>Kategorie</th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @categories.each do |category| %>
          <tr>
            <td><%= category.id %></td>
            <td><%= category.title %></td>
            <td><%= link_to 'Ändern', edit_category_path(category) %></td>
            <td><%= link_to 'Löschen', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <br>

  <%= link_to 'Neue Kategorie', new_category_path, :class => 'btn btn-info btn-xs' %>
</div>